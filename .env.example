# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/restaurant_db"

# JWT Configuration
SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin User Configuration (Optional - will create default admin on startup)
ADMIN_EMAIL="admin@restaurant.com"
ADMIN_PASSWORD="admin123"
ADMIN_FIRST_NAME="System"
ADMIN_LAST_NAME="Administrator"

# Application Configuration
DEBUG=True
API_VERSION="v1"
API_TITLE="Restaurant Management API"
API_DESCRIPTION="A comprehensive restaurant management system"

# CORS Configuration (adjust for your frontend domain)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080"

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Email Configuration (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@restaurant.com"

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"
